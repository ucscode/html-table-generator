{
    "name": "ucscode/html-table-generator",
    "description": "Lightweight PHP library that simplifies the process of creating tables with minimal code",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Uchenna Ajah",
            "email": "uche23mail@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ucscode/uss-element": "^3.5",
        "ucscode/easy-paginator": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Ucscode\\HtmlComponent\\HtmlTableGenerator\\": "src/"
        }
